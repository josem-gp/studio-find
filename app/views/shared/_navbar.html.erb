<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-left">
    <%= link_to root_path, class: "nav-link"  do %>
      <div class="navbar-logo d-flex justify-content-center align-items-center">
        <i class="fas fa-home"></i>
        <div class="ml-1">StudioFind</div>
      </div>
    <% end %>
    <% unless current_page?(root_path) || current_page?(new_user_session_path) || current_page?(new_user_registration_path) %>
      <%= render "shared/search", class: "ml-5" %>
    <% end %>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% avatar = current_user.studios.blank? ? "https://avatars.githubusercontent.com/u/80769492?v=4" : "https://avatars.githubusercontent.com/u/53637961?v=4" %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src=<%=avatar%>% />
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", bookings_path, class: "dropdown-item" %>
            <%= current_user.studios.blank? ? (link_to "My Bookings", bookings_path, class: "dropdown-item") : (link_to "Customer Bookings", owner_bookings_path, class: "dropdown-item") %>
            <%= link_to "My Studios", owner_studios_path, class: "dropdown-item" unless current_user.studios.blank? %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete,  class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
