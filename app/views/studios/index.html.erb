<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/6538903/pexels-photo-6538903.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
  <div class="container">
    <% unless @place.blank? %>
    <h1>Studios <%= "near #{@place.capitalize}" %></h1>
    <% else  %>
    <h1>Studios</h1>
    <% end %>
  </div>
</div>
<div class="container d-flex justify-content-between mt-5">
  <div class="cards">
    <% @studios.each do |studio| %>
      <div class="card-body" data-id="<%= studio.id %>">
        <%= cl_image_tag(studio.photos.first.key, width: 240, height: 300, crop: :fill) %>
        <p class="card-title mb-0 mt-3 font-weight-bold"><%= studio.name %></p>
        <p class="card-text mb-0"><%= "Address: #{studio.location}" %></p>
        <div class="select d-flex justify-content-between">
          <p class="card-text mb-0"><%= "Rate: Â¥#{studio.rate} per hour" %></p>
          <%= link_to studio_path(studio, query: params[:query]) do %>
            <i class="fas fa-arrow-circle-right text-primary"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
    style="width: 533px; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
